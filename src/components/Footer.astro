<style>
	footer {
		margin-top: 4rem;
		padding: 2rem 0;
		border-top: 1px solid var(--border);
		background: var(--bg-primary);
	}
	
	.footer-content {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 1rem;
		text-align: center;
	}
	
	.footer-content p {
		margin: 0 0 1rem;
		color: var(--text-secondary);
		font-size: 0.875rem;
	}
	
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
	}
	
	.social-links a {
		color: var(--text-secondary);
		transition: color 0.2s ease;
	}
	
	.social-links a:hover {
		color: var(--text-primary);
	}
</style>